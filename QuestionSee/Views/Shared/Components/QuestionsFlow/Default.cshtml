@model IEnumerable<QuestionSee.DB.Question>

<div class="QuestionFlow">
    @foreach (var element in Model)
    {
        <div class="QuestionCard">
            <div class="Question">
                <h1>@element.Header</h1>
                <div>@Html.Raw(element.Description)</div>
                <form method="post" >
                    <input type="hidden" name="FullQuestionInfo" value="@element.Id" />
                    <input type="hidden" name="AnswersComments" value="@element.Id" />
                    <input type="submit" value="Посмотреть" /> <Br>
                </form>
            </div>
        </div>
    }
    <div style="clear:both;"></div>
</div>

@await Component.InvokeAsync("FullQuestionInfo")