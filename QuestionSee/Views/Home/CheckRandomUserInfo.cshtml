@model QuestionSee.DB.User
@{
    ViewData["Title"] = "CheckRandomUserInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>

    <div class="MainAccView">
        <div class="LittleInfo">
            <div class="ProfilePic"> <img src="@Model.ProfilePicture" /></div>
            <p>Рейтинг пользователя</p>
            <label>@Model.Rating</label>
        </div>
        <div class="AccInfo">
                <div id="Editerrorview"></div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="exampleName">Имя</label>
                        <input name="Name" disabled type="text" class="form-control" value="@Model.Name">
                    </div>

                    <div class="form-group col-md-6">
                        <label for="exampleSecondName">Фамилия</label>
                        <input name="SecondName" disabled type="text" class="form-control" value="@Model.SecondName">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="exampleNickName">Никнейм</label>
                        <input name="Nickname" disabled type="text" class="form-control" value="@Model.Nickname">
                    </div>
                </div>
        </div>
        <div style="clear:both;"></div>
        <div class="StatAccView" id="piechart">

        </div>

    </div>

</body>
<script type="text/javascript">
    google.charts.load('current', { 'packages': ['corechart'] });
    google.charts.setOnLoadCallback(drawChart);

    function drawChart() {

        var data = google.visualization.arrayToDataTable([
            ['Task', 'Hours per Day'],
            ['Задал', @Model.Asked,],
            ['Ответил', @Model.Answered],
           ['Лучших Ответов', @Model.BestAnswersCount]
        ]);

        var options = {
            title: 'Статистика пользователя: отвеченных\заданных вопросов',
        };

        var chart = new google.visualization.PieChart(document.getElementById('piechart'));

        chart.draw(data, options);
    }
</script>